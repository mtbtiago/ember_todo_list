<div class="row">
  <div class="col-md-4">
    {{#link-to 'todos.new' class="btn btn-success" }}
      Create ToDo
    {{/link-to}}

    <hr>
    {{outlet}}
    <br>
  </div>

  <div class="col-md-8">
    <div class="row">
      <div class="col-md-12">
        <div class="input-group">
          <span class="input-group-addon" id="basic-addon1">
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
          </span>
          {{input type="text" class="form-control" value=filter id="search"}}
          <span class="input-group-addon" {{action 'clearSearch'}}>
            <span class="glyphicon glyphicon-remove" aria-hidden="true" id='search_clear' {{action 'clearSearch'}}></span>
          </span>
        </div>
      </div>
    </div>
    <hr>
    <br>
    {{#if filter}}
      {{#each filteredTodos as |todo|}}
        {{todo-item todo=todo}}
      {{/each}}
    {{else}}
      {{#each sortedTodos as |todo|}}
        {{todo-item todo=todo}}
      {{/each}}
    {{/if}}
  </div>
</div>
