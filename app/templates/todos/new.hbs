<form id="new-todo-form">
  <div class="form-group">
    <label>Title</label>
    {{input type="text" class="form-control" value=title}}
  </div>
  <div class="form-group">
    <label>Date</label>
    {{bootstrap-datepicker class="form-control" value=date todayHighlight=true autoclose=true weekStart=1}}
  </div>
  <div class="form-group">
    <label>Body</label>
    {{textarea class="form-control" value=body}}
  </div>
  <button {{action 'addTodo'}} class="btn btn-primary">Submit</button>
  {{#link-to 'todos' class="btn btn-default"}}Close{{/link-to}}
</form>
