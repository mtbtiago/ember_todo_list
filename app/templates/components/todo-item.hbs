<div class="well">
  <h4>
    {{#if todo.completed}}
      <span class="label label-success" style="margin-right: 16px;">
        <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
      </span>
    {{/if}}
    {{#link-to 'todos.edit' todo.id}}{{todo.title}}{{/link-to}}
    <span class="label label-{{get-date-class todo.date}} pull-right">{{format-date todo.date}}</span>
  </h4>
  {{format-markdown todo.body}}
  {{#if todo.completed}}
    <button {{action 'toggleCompleted' todo}} class='btn btn-warning btn-sm'>Toggle completion</button>
  {{else}}
    <button {{action 'toggleCompleted' todo}} class='btn btn-success btn-sm'>Toggle completion</button>
  {{/if}}
</div>
